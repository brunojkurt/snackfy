{
  "name": "snackfy",
  "version": "1.0.2",
  "description": "Snackfy is a notification provider for React that can easily show, stack up, queue and customize notifications inside your react app.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "publishConfig": { 
    "registry": "https://npm.pkg.github.com/" 
  },
  "keywords": [
    "snackfy",
    "react",
    "javascript",
    "snackbar",
    "component",
    "toast",
    "multiple",
    "enqueue",
    "queue",
    "stacked",
    "notification",
    "brunojkurt"
  ],
  "author": {
    "name": "Bruno Kurt",
    "email": "brunojkurt@gmail.com"
  },
  "homepage": "https://github.com/brunojkurt/snackfy",
  "repository": {
    "url": "git+https://github.com/brunojkurt/snackfy.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/brunojkurt/snackfy/issues"
  },
  "license": "ISC",
  "peerDependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "styled-components": "^5.2.0",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/react-icons": "^3.0.0",
    "@types/styled-components": "^5.1.3",
    "prettier": "^2.1.1",
    "tslib": "^2.0.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "react-icons": "^3.11.0",
    "styled-components": "^5.2.0"
  }
}
